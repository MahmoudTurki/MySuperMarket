<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.LoginActivity">

    <include
        android:id="@+id/topBarLyt"
        layout="@layout/top_bar_login"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBarLyt"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_30"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_5">

        <EditText
            android:id="@+id/usernameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/line_gray"
            android:drawablePadding="@dimen/padding_10"
            android:drawableStart="@drawable/login_user"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:padding="@dimen/padding_5"
            android:textSize="@dimen/mediumTextSize" />


        <EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/line_gray"
            android:drawablePadding="@dimen/padding_10"
            android:drawableStart="@drawable/login_pass"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="7"
            android:padding="@dimen/padding_5"
            android:textAlignment="viewStart"
            android:textSize="@dimen/mediumTextSize" />

        <TextView
            android:id="@+id/forgotPasswordTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:gravity="right"
            android:padding="@dimen/padding_5"
            android:text="@string/forgot_password"
            android:textColor="@color/colorLightGreen"
            android:textSize="@dimen/mediumTextSize" />

        <TextView
            android:id="@+id/loginTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:background="@drawable/login_login_btn"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="@string/log_in"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/mediumTextSize" />

        <TextView
            android:id="@+id/skipLoginTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_5"
            android:text="@string/skip_login"
            android:textColor="@color/colorLightGreen"
            android:textSize="@dimen/mediumTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDarkRed"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_15">

        <TextView
            android:id="@+id/signUpTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="@string/don_t_have_account_sign_up"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/mediumTextSize" />
    </LinearLayout>

</RelativeLayout>
