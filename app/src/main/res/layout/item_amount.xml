<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/addcart"
        android:padding="@dimen/padding_10"
        android:weightSum="3">

        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="@dimen/counter_width"
            android:layout_height="wrap_content"
            android:background="@drawable/deals_addi_t_cartxx"
            android:visibility="gone"
            app:minValue="0"
            app:minusButtonText="-"
            app:plusButtonText="+" />

        <ImageView
            android:id="@+id/subtractImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/cart_reduce"
            android:visibility="visible" />

        <TextView
            android:id="@+id/countTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/addImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/cart_add"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>